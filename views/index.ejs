<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>Main page</title>
    </head>
    <body>
        <h1>File uploader</h1>
        <% if (locals.user) { %>
            <h2>Welcome <%= user.username %></h2>
            <a href="/log-out"><button type="button">Log out</button></a>
            <div>
                <a href="/create-folder">Add new folder</a>
                <div>
                    <% if (locals.folders && folders.length > 0) {%>
                        <div><%= user.firstName %>'s folders</div>
                        <div class="folders-containers">
                            <% folders.forEach((folder) => { %>
                                <div>
                                    <div><a href="/folders/<%= folder.id %>/update"><%= folder.name %></a></div>
                                    <% if (folder.dateOfModification !== null ) {%>
                                        <div>Date of modification: <%= folder.dateOfModification.toLocaleDateString()%> <%= folder.dateOfModification.toLocaleTimeString() %></div>
                                    <% }; %>
                                    <div>File(-s): <%= folder.numberOfFiles %></div>
                                    <div>
                                        <a href="/folders/<%= folder.id %>/files">
                                            <button type="button">Show files</button>
                                        </a>
                                    </div>
                                    <div>
                                        <form action="/folders/<%= folder.id %>/delete" method="POST">
                                            <button type="submit" onclick="return confirm('Are you sure you want to delete this folder? All files in this folder will be lost.')">Delete folder</button>
                                        </form>
                                    </div>
                                </div>
                            <% }); %>
                        </div>
                    <% } else { %>
                        <div>There is no folder.</div>
                    <% } %>
                </div>
            </div>
        <% } else { %>
            <h2>You're not logged in.</h2>
            <p><a href="/log-in">Log in.</a></p>
            <p>First time? <a href="/sign-up">Sign up.</a></p>
        <% } %>
    </body>
</html>